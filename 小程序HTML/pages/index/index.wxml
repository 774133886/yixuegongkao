<!--pages/index/index.wxml-->

<import src="../../wxParse/wxParse.wxml"/>
<view class='Con l-pad40 font30'>
  <view class='searchBox around-center'>
    <view class='center'>
      <image class='wid36rpx hgt36rpx' src='../../files/icon_search.png'></image>
      <text class='color-999 font24 m-l-10'>搜索课程名称/老师</text>
    </view>
  </view>
  <!-- swiper首页轮播图 -->
  <view class='indexPic'>
    <swiper indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500" interval="3000" style='height:312rpx;'>
      <swiper-item class="" wx:for="{{bannerlist}}" wx:key="item"><image src='{{item.image}}' class='indexBanner block radius8' mode='aspectFill' data-tar='{{item}}'  data-tartype='{{item}}' bindtap='gobanner'></image></swiper-item>
    </swiper>
  </view>
</view>

