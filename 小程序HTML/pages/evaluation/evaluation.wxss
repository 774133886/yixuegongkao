/* pages/evaluation/evaluation.wxss */
page,.evaluation{
  height: 100%;
}
.evaluation{
  padding: 40rpx;
}
.evaluationStar{
  margin-bottom: 20rpx;
}
.evaluationStar image{
  width: 76rpx;
  height: 70rpx;
  margin: 0 12rpx;
}
.evaluationBtn,.btn-hover1{
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background:rgba(30,158,243,1);
  border-radius:10rpx;
  color: #fff;
  font-weight: bold;
  font-size: 36rpx;
}
.evaluationText{
  width: 100%;
  padding: 35rpx 25rpx;
  font-size: 30rpx;
  background:rgba(248,248,248,1);
  text-align: left;
  color: #333;
}
.disabled,.btn-hover2{
  background:rgba(198,198,198,1);
}
.m-b-50{
  margin-bottom: 45rpx;
}