/* pages/index/index.wxss */
page{
  background-color: #fff;
  box-sizing: border-box;
  height: 100%;

}
.searchBox{
  width:100%;
  height:60rpx;
  background:rgba(249,249,249,1);
  border-radius:10rpx;
}
.wid36rpx{
  width: 36rpx;
}
.hgt36rpx{
  height: 36rpx;
}
.indexPic{
  padding-top: 16rpx;
  padding-bottom: 0;
  box-sizing: border-box;
  border-radius:10rpx;
}
.indexBanner{
  width: 100%;
  border-radius:10rpx;
  height: 312rpx;
}
page .wx-swiper-dots.wx-swiper-dots-horizontal{
  margin-bottom: -10rpx;
}
.indexPic .wx-swiper-dot{
  width: 10rpx;
  height: 10rpx;
  background-color: rgba(255, 255, 255, .5);
  border-radius:50%;
  margin: 10rpx;
}
.indexPic .wx-swiper-dot-active{
  background-color: rgba(255, 255, 255, 1)!important;
}
